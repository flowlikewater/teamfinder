{{nav-bar transTo="transTo"}}
<div class="container">
<h4>Player Name: {{model.players.name}}</h4>
<div class="col-md-6">
  <p><b>Sex:</b> {{model.players.sex}}</p>
  <p><b>Description:</b> {{model.players.description}}</p>
  <p><b>Joined Teams:</b></p>
  <ol>
  {{#each model.players.joinedteams as |joinedteam|}}
    <li><a{{action "linktoteam" joinedteam model.teams}}>{{joinedteam}}</a></li>
  {{/each}}
  </ol>
</div>
<div class="col-md-6">
  <p><b>Build:</b> {{model.players.build}}</p>
  <p><b>Age:</b> {{model.players.age}}</p>
  <p><b>Location:</b> {{model.players.location}}</p>
  <p><b>Email:</b> {{model.players.email}}</p>
</div>


{{team-send-message sendMessage="sendMessage" player=model.players}}

<hr>



{{#each model.players.messages as |message|}}
  <div class="orangebox-message">
    <p>Message: {{message.message}}</p>
    <p>Time: {{message.time}}</p>
    <p>By {{message.name}}</p>
  </div>
{{/each}}

</div>
