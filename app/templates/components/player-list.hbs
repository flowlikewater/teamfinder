<div class="row">
  {{#link-to 'player' model.id}}
    <h4>Player Name: {{model.name}}</h4>{{/link-to}}
  <div class="col-md-6">
    <p><b>Sex:</b> {{model.sex}}</p>
    <p><b>Description:</b> {{model.description}}</p>
  </div>
  <div class="col-md-6">
    <p><b>Build:</b> {{model.build}}</p>
    <p><b>Age:</b> {{model.age}}</p>
    <p><b>Location:</b> {{model.location}}</p>
    <p><b>Email:</b> {{model.email}}</p>
  </div>
</div>
