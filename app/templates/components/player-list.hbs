<div class="row">
  <h3>List of players </h3>
  {{#each model.players as |player|}}
  <div class='row homepagebox'>
    <div class="col-md-12">
    {{#link-to 'player' player.id}}<h4>Player Name: {{player.name}}</h4>{{/link-to}}
    </div>
    <div class="col-md-6">
      <p><b>Sex:</b> {{player.sex}}</p>
      <p><b>Description:</b> {{player.description}}</p>
    </div>
    <div class="col-md-6">
      <p><b>Build:</b> {{player.build}}</p>
      <p><b>Age:</b> {{player.age}}</p>
      <p><b>Location:</b> {{player.location}}</p>
      <p><b>Email:</b> {{player.email}}</p>
    </div>
  </div>
  {{/each}}
</div>
