{{#if openMessageForm}}
<h1>New Message</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=credentials.tempname id="name"}}
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time"}}
      </div>
      <button {{action 'sendMessage'}}>Send Message</button>
    </form>
  </div>
{{else}}
  <button {{action 'MessageFormShow'}}>New Message</button>
{{/if}}
