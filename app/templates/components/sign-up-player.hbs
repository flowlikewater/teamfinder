{{#if signUpPlayer}}
<h1>New Player</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="sex">Sex</label>
        {{input value=sex id="sex"}}
      </div>
      <div class="form-group">
        <label for="loginid">login ID</label>
        {{input value=loginid id="loginid"}}
      </div>
      <div class="form-group">
        <label for="loginpassword">Password</label>
        {{input value=loginpassword id="loginpassword"}}
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description id="description"}}
      </div>
      <div class="form-group">
        <label for="build">Build</label>
        {{input value=build id="build"}}
      </div>
      <div class="form-group">
        <label for="age">Age</label>
        {{input value=age id="age"}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email id="email"}}
      </div>
      {{#link-to 'homepage'}}
      <button class="btn btn-primary" {{action 'saveSignUpPlayer'}}>Sign up</button>
      {{/link-to}}
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'signUpFormShow'}}>New Player</button>
{{/if}}
