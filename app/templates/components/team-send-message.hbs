{{yield}}
{{#if openMessageForm}}
<h1>New Message</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="messengername">Name</label>
        {{input value=credentials.tempname id="messengername"}}
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <button class="btn btn-primary" {{action 'sendMessage'}}>Send Message</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'MessageFormShow'}}>New Message</button>
{{/if}}
