<div>
  <h2>Team Name: {{model.teams.name}}</h2>
  <h3>Category: {{model.teams.category}}</h3>
  <p>Total Players: {{model.teams.totalplayer}}</p>
  <p>Players Wanted: {{model.teams.playerswanted}}</p>
  <p>Age Range: {{model.teams.agerange}}</p>
  <p>Location: {{model.teams.location}}</p>
  <p>Description: {{model.teams.description}}</p>
  <p>Teamm8s: {{model.teams.teammates}}</p>
</div>

<hr>

{{bye-player teammates=model.teams.teammates deleteplayer="deleteplayer"}}

<hr>

{{edit-team}}
{{add-team-member}}

{{player-send-message sendMessage="sendMessage" team=model.teams}}

{{#each model.teams.messages as |message|}}
  <div style="width:200px;border:1px solid red; margin:10px">
    <li>Message:{{message.message}}</li>
    <li>Time:{{message.time}}</li>
    <li>By {{message.name}}</li>
    <button {{action 'changeplayer' message.name model.teams}}>Add player</button>
  </div>
{{/each}}
